{% extends "base.html.twig" %}

{% block title %}
	Créer une annonce
{% endblock %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}
	<div class="container">
		<h1>Créer une nouvelle annonce</h1>
		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				<div class="alert-light pl-2">
					<h2 class="h4">Informations générales</h2>
					<hr>
					{{ form_row(form.title) }}
					{{ form_row(form.price) }}
					{{ form_row(form.rooms) }}
				</div>
				<div class="alert-light pl-2">
					<h2 class="h4">Détails de l'annonce</h2>
					<hr>
					{{ form_row(form.introduction) }}
					{{ form_row(form.content) }}
				</div>
			</div>
			<div class="col">
				<div class="alert-light pl-2">
					<h2 class="h4">Images de l'annonce</h2>
					<hr>
					{{ form_row(form.coverImage) }}
					{{ form_row(form.images) }}
				</div>
			</div>
		</div>
		<div class="alert alert-success text-center">
			<h2 class="alert alert-heading">Sauvegarder mon annonce</h2>
			<p>Vous êtes sur le point de créer votre annonce Bravo !!!</p>
			<button type="submit" class="btn btn-primary">
				<i class="fas fa-check"></i>
				Enregistrer l'annonce</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('ad') }}
{% endblock %}
