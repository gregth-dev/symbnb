{# a mettre en lien dans les pages : {% include 'partials/rating.html.twig' with {rating:comment.rating} %} #}

<span class="rating">
	{% for i in 1..5 %}
		{% if i <= rating %}
			<i class="fas fa-star"></i>
		{% elseif (i - rating) < 1 %}
			<i class="fas fa-star-half-alt"></i>
		{% else %}
			<i class="far fa-star"></i>
		{% endif %}
	{% endfor %}
</span>
