{% extends "base.html.twig" %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="my-5">Inscrivez-vous sur notre site</h1>

		{{ form_start(form) }}
		<div class="row  align-items-center">
			<div class="col">
				<div class="alert alert-light">
					<h2 class="h4 alert-heading">Information Général</h2>
					<hr>
					{{ form_row(form.firstName) }}
					{{ form_row(form.lastName) }}
					{{ form_row(form.email) }}
					{{ form_row(form.picture) }}
				</div>
			</div>
			<div class="col">
				<div class="alert alert-light">
					<h2 class="h4 alert-heading">Détails</h2>
					<hr>
					{{ form_row(form.introduction) }}
					{{ form_row(form.description) }}
				</div>
				<div class="alert alert-light">
					<h2 class="h4 alert-heading">Votre mot de passe</h2>
					<hr>
					{{ form_row(form.hash) }}
					{{ form_row(form.passwordConfirm) }}
					<hr>
					<p>Confirmer votre inscription</p>
					<button type="submit" class="btn btn-success">
						<i class="fas fa-check"></i>
						S'inscrire
					</button>
				</div>
			</div>
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}
