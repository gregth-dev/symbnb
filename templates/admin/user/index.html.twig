{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des réservations</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Utilisateur</th>
					<th>Email</th>
					<th>Introduction</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in pagination.data %}
					<tr>
						<td>{{user.id}}</td>
						<td>
							<img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar avatar-mini mr-2">
							{{user.fullName}}
						</td>
						<td>{{user.email}}</td>
						<td>{{user.introduction}}</td>
						<td>
							<a href="{{ path('admin_user_delete', {id:user.id}) }}" class="btn btn-danger" onclick="return confirm(`Êtes vous sûr de vouloir supprimer cet utilisateur ?`)">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{pagination.render()}}
	</div>
{% endblock %}
