{% extends "admin/base.html.twig" %}

{% block title %}Commentaire n°{{ comment.id }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5">Modification du commentaire n°{{ comment.id }}</h1>
		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				<div class="alert alert-info">
					<h4 class="alert-heading">Informations du commentaire</h4>
					<strong>Annonce liée :</strong>
					{{ comment.ad.title }}<br>
					<strong>Auteur :</strong>
					{{ comment.author.fullName }}<br>
					<strong>Date de création :</strong>
					{{ comment.createdAt | date("d/m/Y h:i")}}<br>
					<strong>Note donnée :</strong>
					{{ comment.rating }}

				</div>
				{{ form_row(form.content,{'label':'Contenu du commentaire'}) }}
				<div class="text-center">
					<button type="submit" class="btn btn-primary">
						<i class="fas fa-check">
							Enregistrer les modifications</i>
					</button>
				</div>
			</div>
		</div>
		{{ form_end(form) }}

	</div>

{% endblock %}
